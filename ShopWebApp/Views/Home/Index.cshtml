@using ShopWebModels.Common
@using ShopWebModels.Catalog.Products

@inject Microsoft.Extensions.Configuration.IConfiguration confi;
@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";

    var slides = Model.slides;
    var listProduct = Model.FeartureProduct;

}

@section SlideBar{
    <div id="carouselBlk">
        <div id="myCarousel" class="carousel slide">
            <div class="carousel-inner">
                @if (Model.slides != null)
                {
                    @for (int index = 0; index < slides.Count; index++)
                    {
                        var slide = slides[index];
                        <div class="item @(index == 0 ? " active" : "" )">
                            <div class="container">
                                <a href="@slide.Url"><img style="width:100%" src="@slide.Image" alt="@slide.Name" /></a>
                                <div class="carousel-caption">
                                    <h4>@slide.Name</h4>
                                    <p>@slide.Description</p>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
        </div>
    </div>
}
<div class="span9">
    <div class="well well-small">
        <h4>Featured Products <small class="pull-right">200+ featured products</small></h4>
        <div class="row-fluid">
            <div id="featured" class="carousel slide">
                <div class="carousel-inner">

                    @{
                        List<ProductViewModel> featurePart = new List<ProductViewModel>();
                        List<List<ProductViewModel>> featureProducts = new List<List<ProductViewModel>>();
                        int count = 0;
                    }
                    @for (int i = 0; i < listProduct.Count; i++)
                    {
                        if (count % 3 == 0 && count != 0)
                        {
                            featurePart.Add(listProduct[i]);
                            featureProducts.Add(featurePart);
                            featurePart = new List<ProductViewModel>();
                            count = 0;
                        }
                        else
                        {
                            featurePart.Add(listProduct[i]);
                            count++;
                            if (i == listProduct.Count - 1)
                            {
                                featureProducts.Add(featurePart);
                                count++;
                                break;
                            }
                        }
                    }
                    @for (int i = 0; i < featureProducts.Count; i++)
                    {<div class="item @(i == 0 ? "active" : "")">
                            <ul class="thumbnails">
                                @foreach (var j in featureProducts[i])
                                {
                                    var url = $"BabyShop/{j.cateName}/San-pham/{j.Id}";
                                    <li class="span3">
                                        <div class="thumbnail">
                                            <i class="tag"></i>
                                            <a href="@url"><img src="@(confi["Uri"] + j.ThumnailFile)" alt="@j.ProductName"></a>
                                            <div class="caption">
                                                <h5>@j.ProductName</h5>
                                                <h4><a class="btn" href="@url">VIEW</a> <span class="pull-right">@j.Price</span></h4>
                                            </div>
                                        </div>
                                    </li>

                                }
                            </ul>
                        </div>
                    }
                    <a class="left carousel-control" href="#featured" data-slide="prev">‹</a>
                    <a class="right carousel-control" href="#featured" data-slide="next">›</a>
                </div>
            </div>
        </div>
    </div>
    <h4>Latest Products </h4>
    <ul class="thumbnails">
        @for (var index = 0; index < Model.LatestProduct.Count; index++)
        {

            var item = Model.LatestProduct[index];
            var url = $"BabyShop/{item.cateName}/San-pham/{item.Id}";

            <li class="span3">
                <div class="thumbnail">
                    <a href="@url">
                        <img src="@(confi["Uri"] + item.ThumnailFile)" alt="@item.ProductName" />
                    </a>
                    <div class="caption">
                        <h5>@item.ProductName</h5>
                        <p>
                            @item.Description
                        </p>

                        <h4 style="text-align:center">
                            <a class="btn" href="@url">
                                <i class="icon-zoom-in"></i>
                            </a>
                            <a class="btn btn-add-cart" data-id="@item.Id" href="#">
                                Add to
                                <i class="icon-shopping-cart"></i>
                            </a> <a class="btn btn-primary" href="#">@item.Price</a>
                        </h4>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>