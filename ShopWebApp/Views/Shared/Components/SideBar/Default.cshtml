@using ShopWebModels.Catalog.Categories
@model List<CategoriSelected>

<div id="sidebar" class="span3">
    <div class="well well-small"><a id="myCart" href="product_summary.html"><img src="/themes/images/ico-cart.png" alt="cart">3 Items in your cart  <span class="badge badge-warning pull-right">$155.00</span></a></div>
    <ul id="sideManu" class="nav nav-tabs nav-stacked">

        @{
            var parents = Model.Where(x => x.parentId == null);
        }
        @for (int index = 0; index < parents.Count(); index++)
        {
            var parent = parents.ElementAt(index);
            var childrent = Model.Where(x => x.parentId == parent.CateId);
            var url = $"BabyShop/";
            if (childrent.Any())
            {
                <li class="subMenu open">
                    <a> @parent.CateName</a>
                    <ul>
                        @foreach (var child in childrent)
                        {
                            <li><a class="active" href="/@(url + child.CateName +"/" + child.CateId)"><i class="icon-chevron-right"></i>@child.CateName  </a></li>
                        }
                    </ul>
                </li>
            }
            else
            {
                <li><a href="/@(url + parent.CateId)">@parent.CateName]</a></li>
            }
        }
    </ul>
    <br />
    <p>Đây la trang Component</p>
    <div class="thumbnail">
        <img src="/themes/images/payment_methods.png" title="Bootshop Payment Methods" alt="Payments Methods">
        <div class="caption">
            <h5>Payment Methods</h5>
        </div>
    </div>
</div>