@using ShopWebModels.Catalog.Products
@using ShopWebModels.Common
@model PageResult<ProductViewModel>

@{
    ViewData["Title"] = "Danh sach san pham";
    Layout = "/Views/Shared/_Layout.cshtml";
}

@section Scripts{

    <script>
        setTimeout(function () {
            $('#msg').fadeOut('slow');
        }, 4000);
    </script>

}

<div class="container-fluid">
    <h1 class="mt-4">Product List</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chu</a></li>
        <li class="breadcrumb-item active">Danh sach san pham</li>
    </ol>
    @if (!string.IsNullOrEmpty(@ViewBag.message))
    {
        <div id="msg" class="alert alert-success" role="alert">
            @ViewBag.message
        </div>
    }
    @if (@ViewBag.message != null)
    {
        <div id="msg">
            <partial name="_Alert" model="@ViewBag.message" />
        </div>
    }
</div>
<div class="card mb-12">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6 col-xl-12">
                <a class="btn btn-success" asp-action="CreateProduct" asp-controller="Product">Tao moi</a>
            </div>
            <div class="col-md-6 col-xl-12">
                <form asp-action="Index" method="get">

                    <div class="row">
                        <div class="col-md-4">
                            <input type="text" value="@ViewBag.Key" name="Key" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <select name="cateId" onchange="this.form.submit()" asp-items="@ViewBag.categori">
                                <option value="value">-----Select-----</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-primary">Tim</button>
                            <button type="submit" onclick="window.location.href='/User/Index'" class="btn btn-danger">Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<main>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Example
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Product Name</th>
                            <th>Price</th>

                            <th>Stock</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Item.Count > 0 || Model.Item.Count == 0)
                        {
                            int stt = 1;
                            @foreach (var item in Model.Item)
                            {
                                <tr>
                                    <td>
                                        @(stt++)
                                    </td>
                                    <td hidden>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Stock)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>

                                        <a class="btn btn-success" asp-action="CategoriAssign" asp-route-id="@item.Id">
                                            CategoriAssign
                                        </a>
                                        <a class="btn btn-success" asp-action="EditProduct" asp-route-id="@item.Id">
                                            EditProduct
                                        </a>
                                        @*<a asp-action="RoleAssign" asp-controller="User" asp-route-id="@item.Id" class="btn btn-danger">Role Assign</a>*@
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @await Component.InvokeAsync("Pager", Model)
    </div>
</main>