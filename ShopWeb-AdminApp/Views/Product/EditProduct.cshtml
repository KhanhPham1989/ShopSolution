@using ShopWebModels.Catalog.Products
@model ProductEditRequest

@{
    ViewData["Title"] = "Cap nhat san pham";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scriptss{
    <script src="https://cdn.ckeditor.com/ckeditor5/[version.number]/[distribution]/ckeditor.js"></script>
    <script src="ckeditor.js"></script>
    <script>

        ClassicEditor.create(document.querySelector('#textarea'), {

        })
            .then(editor => {
                window.editor = editor;
            })
            .catch(err => {
                console.error(err.stack);
            });
    </script>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"]</title>
    <link href="/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="small"><a asp-action="Index" asp-controller="Product">Back to list</a></div>
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">@ViewData["Title"]</h3></div>
                                <div class="card-body">
                                    @{
                                        var thongbao = ViewBag.mess;
                                    }
                                    @if (!string.IsNullOrEmpty(thongbao))
                                    {
                                        <div id="msg" class="alert alert-success" role="alert">
                                            @thongbao
                                        </div>
                                    }
                                    <form asp-action="EditProduct" asp-controller="Product" method="post" enctype="multipart/form-data">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="row mb-9">
                                            <div class="col-md-9 form-group" hidden>
                                                <label asp-for="Proid" class="control-label">Proid</label>
                                                <input asp-for="Proid" class="form-control" />
                                                <span asp-validation-for="Proid" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-9 form-group" hidden>
                                                <label asp-for="LangId" class="control-label">Name</label>
                                                <input asp-for="LangId" class="form-control" />
                                                <span asp-validation-for="LangId" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-9 form-group">
                                                <label asp-for="Name" class="control-label">Name</label>
                                                <input asp-for="Name" class="form-control" />
                                                <span asp-validation-for="Name" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-9 form-group">
                                                <label asp-for="SeoTitle" class="control-label">SeoTitle</label>
                                                <textarea id="textarea" asp-for="SeoTitle" class="form-control"></textarea>
                                                <span asp-validation-for="SeoTitle" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-9 form-group">
                                                <label asp-for="Description" class="control-label">Description</label>
                                                <textarea id="textarea" asp-for="Description" class="form-control"></textarea>
                                                <span asp-validation-for="Description" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-9 form-group">
                                                <label asp-for="SeoAlias" class="control-label">SeoAlias</label>
                                                <input asp-for="SeoAlias" class="form-control" />
                                                <span asp-validation-for="SeoAlias" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-9 form-group">
                                                <label asp-for="Details" class="control-label">Details</label>
                                                <input asp-for="Details" class="form-control" type="text" />
                                                <span asp-validation-for="Details" class="text-danger"></span>
                                            </div>
                                            <div class="thumbnail">

                                                <a href="/@Model.ThumbnaiImage"><img href="/@Model.ThumbnaiImage" src="/@Model.ThumbnaiImage" alt="@Model.Name"></a>
                                            </div>
                                            <div class="col-md-9 form-group">
                                                <label asp-for="ThumbnaiImage" class="control-label">Thumbnai Image</label>
                                                <input asp-for="ThumbnaiImage" class="form-control" type="file" />
                                                <span asp-validation-for="ThumbnaiImage" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mt-4 mb-0">
                                            <div class="d-grid">
                                                <button class="btn btn-primary btn-block mb-4" type="submit">
                                                    Update Product
                                                </button>
                                                <button class="btn btn-primary btn-block mb-4" type="reset" value="reset">Reset</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a asp-action="Index" asp-controller="Login">Have an account? Go to login</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2023</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/js/scripts.js"></script>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}