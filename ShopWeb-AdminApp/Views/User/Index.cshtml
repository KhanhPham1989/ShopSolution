@using ShopWebModels.Catalog.User;
@using ShopWebModels.Common;

@model PageResult<UserViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "/Views/Shared/_Layout.cshtml";

}

<h1>User List</h1>

<p>
    <a asp-action="Register" asp-controller="User" class="btn btn-success">Add New User</a>
</p>

<table class="table">
    <thead>

        <tr>
            <th>
                STT
            </th>
            <th>
                ID
            </th>
            <th>
                Full Name
            </th>
            <th>
                User Phone
            </th>
            <th>
                Email
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Item.Count > 0)
        {
            int stt = 1;
            @foreach (var item in Model.Item)
            {
                <tr>
                    <td>
                        @(stt++)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        <a asp-action="EditInformation" asp-controller="User" asp-route-id="@item.id" class="btn btn-info">Edit</a> &nbsp;|&nbsp;
                        <a asp-action="DeleteUser" asp-controller="User" asp-route-id="@item.id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            throw new Exception("No information");
        }
    </tbody>
</table>