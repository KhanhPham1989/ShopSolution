@{ Layout = null; }
@using ShopWebModels.Catalog.User
@model EditRequest

@{
    ViewData["Title"] = "EditInforUser";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"]</title>
    <link href="/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="small"><a asp-action="Index" asp-controller="User">Back to list</a></div>
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Update Information</h3></div>
                                <div class="card-body">
                                    <form asp-action="EditInforUser" asp-controller="User">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="row mb-9">
                                            <div class="col-md-9">
                                                <label asp-for="FullName" class="control-label"></label>
                                                <input asp-for="@Model.FullName" class="form-control" />
                                                <span asp-validation-for="FullName" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-9">
                                                <label asp-for="Email" class="control-label">Your Email</label>
                                                <input asp-for="@Model.Email" class="form-control" />
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-9">
                                                <label asp-for="UserPhone" class="control-label">Your UserPhone</label>
                                                <input asp-for="@Model.UserPhone" class="form-control" />
                                                <span asp-validation-for="UserPhone" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-9">
                                                <label asp-for="DOB" class="control-label">Your Birthday</label>
                                                <input asp-for="@Model.DOB" class="form-control" type="date" />
                                                <span asp-validation-for="DOB" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mt-4 mb-0">
                                            <div class="d-grid">
                                                <button class="btn btn-primary btn-block mb-4"
                                                        type="submit" value="save">
                                                    Agree to change
                                                </button>
                                                <button class="btn btn-primary btn-block mb-4" type="submit"
                                                        asp-action="Index" asp-controller="User">
                                                    Back to List
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a asp-action="Index" asp-controller="Login">Have an account? Go to login</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2023</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/js/scripts.js"></script>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}