@using ShopWebModels.Catalog.User
@model RoleAssignRequest

@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> Role Assign</h1>

<div class="container-fluid">
    <h1 class="mt-4">Role Assign</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="">Trang chu</a></li>
        <li class="breadcrumb-item active">Role Assign</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index">Back to list</a>
        </div>
    </div>

    <div class="card-body">
        <form asp-action="RoleAssign" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            @for (var i = 0; i < Model.Roles.Count; i++)
            {
                <div class="col-md-9 form-group">
                    <label>
                        @Model.Roles[i].Name
                        <input type="checkbox" asp-for="Roles[i].Selected" />
                        <input type="hidden" asp-for="Roles[i].IdRole" />
                        <input type="hidden" asp-for="Roles[i].Name" />
                        <input type="hidden" asp-for="id" />
                    </label>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>